# send API paths to FastAPI
proxy_http_version 1.1;
proxy_set_header Host $host;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;
proxy_set_header Connection "";

location ^~ /graph3d/   { proxy_pass http://gf_backend:8000; }
location ^~ /tags/      { proxy_pass http://gf_backend:8000; }
location =  /busz       { proxy_pass http://gf_backend:8000; }
location ^~ /messages   { proxy_pass http://gf_backend:8000; }
location ^~ /produce/   { proxy_pass http://gf_backend:8000; }
